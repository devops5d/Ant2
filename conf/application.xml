	<application-name>HelloWeb</application-name>
	<initialize-in-order>false</initialize-in-order>
	<module>
        	<ejb>jar1.jar</ejb>
    	</module>
    	<module>
        	<ejb>jar2.jar</ejb>
    	</module>
	<module>
		<web>
			<web-uri>HelloWeb.war</web-uri>
			<context-root>/HelloWeb</context-root>
		</web>
	</module>
</application>
